{% extends 'base.html.twig' %}

{% block title %}Mes notifications{% endblock %}

{% block body %}
<h1>Mes notifications</h1>

{% if notifications is empty %}
    <div class="alert alert-info">Aucune notification pour le moment.</div>
{% else %}
    <ul class="list-group">
        {% for notification in notifications %}
            <li class="list-group-item">
                <strong>{{ notification.type|capitalize }}</strong> : {{ notification.label }}<br>
                <small class="text-muted">{{ notification.createdAt|date('d/m/Y H:i') }}</small>
            </li>
        {% endfor %}
    </ul>
{% endif %}
{% endblock %}
