{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="login-container">
        <h1 class="login-title">Connexion</h1>

        {{ form_start(form, { attr: { class: 'login-form' } }) }}
            {{ form_row(form._email, {
                attr: {
                    placeholder: 'Adresse email',
                    class: 'login-input'
                },
                label: false
            }) }}

            {{ form_row(form._password, {
                attr: {
                    placeholder: 'Mot de passe',
                    class: 'login-input'
                },
                label: false
            }) }}

            <button class="login-button">Se connecter</button>
        {{ form_end(form) }}

        <p class="login-register-text">
            Pas encore de compte ?
            <a href="{{ path('app_register') }}" class="login-register-link">Inscrivez-vous ici</a>.
        </p>
    </div>

    <style>
        .login-container {
            max-width: 400px;
            margin: 4rem auto;
            padding: 2rem;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
        }

        .login-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: #2c3e50;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .login-form {
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
        }

        .login-input {
            padding: 0.75rem 1rem;
            font-size: 1rem;
            border-radius: 8px;
            border: 1px solid #ddd;
            transition: border 0.2s ease, box-shadow 0.2s ease;
        }

        .login-input:focus {
            outline: none;
            border-color: #3498db;
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
        }

        .login-button {
            background-color: #3498db;
            color: white;
            padding: 0.75rem;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

        .login-button:hover {
            background-color: #2980b9;
        }

        .login-register-text {
            margin-top: 1.5rem;
            font-size: 0.95rem;
            text-align: center;
            color: #555;
        }

        .login-register-link {
            color: #3498db;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.2s ease;
        }

        .login-register-link:hover {
            color: #21618c;
        }

        @media (max-width: 480px) {
            .login-container {
                margin: 2rem 1rem;
                padding: 1.5rem;
            }

            .login-title {
                font-size: 1.5rem;
            }

            .login-input,
            .login-button {
                font-size: 0.95rem;
            }

            .login-register-text {
                font-size: 0.9rem;
            }
        }
    </style>
{% endblock %}
